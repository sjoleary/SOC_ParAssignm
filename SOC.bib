journal = {Fisheries Research},
keywords = {Fisheries management,Fisheries potential,Recruitment limitation,Restocking,Spawning biomass,Stock Enhancement},
month = {aug},
number = {1},
pages = {1--8},
pmid = {6902727},
publisher = {Elsevier},
title = {{Restocking and stock enhancement of coastal fisheries: Potential, problems and progress}},
