doi = {10.1577/t06-136.1},
issn = {0002-8487},
journal = {Transactions of the American Fisheries Society},
month = {sep},
number = {5},
pages = {1193--1205},
publisher = {Taylor {\&} Francis Group},
title = {{Effects of Temperature and Feed Energy on the Performance of Juvenile Red Drum}},
